{
  "name": "znu-event",
  "version": "0.0.2",
  "description": "A simple event emitter",
  "main": "lib/znu-event.cjs.js",
  "module": "lib/znu-event.esm.js",
  "browser": "lib/znu-event.umd.js",
  "types": "types/main.d.ts",
  "files": [
    "lib/**/*",
    "types/*",
    "src/**/*"
  ],
  "scripts": {
    "build:type": "rimraf types && tsc -p ./tsconfig.type.json",
    "build": "rimraf lib && rollup -c && npm run build:type",
    "test": "jest --no-cache",
    "eslint": "eslint --ext .js,.vue,.tsx,.ts --fix ./src",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,vue,ts,tsx}": [
      "npm run eslint",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chenchenwuai/znu-event.git"
  },
  "author": "chenwuai",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^23.3.5",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "eslint": "^7.4.0",
    "husky": "^4.2.5",
    "jest": "^23.6.0",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.2",
    "rollup": "^0.67.1",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript": "^1.0.1",
    "standard-version": "^4.4.0",
    "ts-jest": "^23.10.4",
    "tslib": "^1.10.0",
    "typescript": "^3.0.1"
  }
}
