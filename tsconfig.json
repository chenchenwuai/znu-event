{
    "compilerOptions": {
        "strict": true, // 启用所有严格类型检查选项。相当于启用 --noImplicitAny, --noImplicitThis, --alwaysStrict， --strictNullChecks和 --strictFunctionTypes和--strictPropertyInitialization。
        "module": "commonjs", // 指定生成哪个模块系统代码 "None"， "CommonJS"， "AMD"， "System"， "UMD"， "ES6"或 "ES2015"。
        "moduleResolution": "node", // 决定如何处理模块 module === "AMD" or "System" or "ES6" ? "Classic" : "Node"
        "esModuleInterop": true,
        "target": "es5", // 指定ECMAScript目标版本
        // "module": "umd",
        "noImplicitAny": true, // 在表达式和声明上有隐含的 any类型时报错。
        "removeComments": true, // 删除所有注释，除了以 /!*开头的版权信息。
        "preserveConstEnums": false, // 保留 const和 enum声明。
        "sourceMap": true, // 生成相应的 .map文件。
        "downlevelIteration": true,

        // 告诉编辑器你需要的语法提示的版本
        "lib": [
            "es6"
        ],
    },
    "include": [
        "src/main.ts"
    ]
}